@using PagedList.Mvc
@model  PagedList.IPagedList<E_shoppingMart.Models.tbl_category>

@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View  Category</title>
    <link href="~/Content/pagination.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container" style="height:900px; ">
        <div class="row">
            <div class="col-lg-12" style="height:50%"; border:1px solid solid;">

                <br />
                <img src="~/Content/img/globe-digital-grid-futuristic-background.jpg" style="width:100%; height:200px" />


            </div>

        </div>



        <div class="row" style="margin-bottom:40px">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-4" style="height:200px;margin-top:100px">
                        <img src="@Url.Content(item.cat_image)" style=" height:100%;width:100% ;border-radius:50px 50px 50px 50px" />
                        <h4 style="color:#808080; font-family:'Arial Rounded MT';text-align:center"> @Html.ActionLink(@item.cat_name, "Ads", new { id = @item.cat_id })</h4>
                        
                    </div>

                }
            }

        </div>
    </div>

    @*<p class="text-center">@Html.ActionLink("ADD CATEGORY", "Create", "Admin", new { @class = "btn btn-success" })</p>*@

<div id="container" style="margin-left: 20px">
    <p></p>
    <p></p>
    <div class="pagination" style="margin-left: 400px">
            Page @(Model.PageCount< Model.PageNumber ? 0 : Model.PageNumber)
    of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
  
    </div>
</div>
</body>
</html>

